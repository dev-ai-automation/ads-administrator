# =============================================================================
# Ads Administrator Backend - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# Never commit .env to version control!

# Application
PROJECT_NAME="Ads Administrator"
API_V1_STR="/api/v1"
DEBUG=false

# =============================================================================
# Auth0 Configuration
# =============================================================================
# Get these from your Auth0 Dashboard > Applications > API
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_API_AUDIENCE=https://api.your-domain.com
AUTH0_ALGORITHM=RS256

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ads_administrator

# =============================================================================
# Meta (Facebook) Ads Configuration
# =============================================================================
# Get these from Meta Business Suite > Business Settings > System Users
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
