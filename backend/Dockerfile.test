# =============================================================================
# Dockerfile for Backend Tests
# =============================================================================
# This Dockerfile is used to run tests in an isolated environment.
# Usage: docker build -f Dockerfile.test -t ads-backend-test .
#        docker run --rm ads-backend-test
# =============================================================================

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt requirements-dev.txt ./

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt -r requirements-dev.txt

# Copy application code
COPY . .

# Set Python path
ENV PYTHONPATH=/app
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Default test command
CMD ["pytest", "-v", "--tb=short", "--color=yes"]
